{
  "name": "@looking-glass/chat",
  "version": "0.1.0",
  "description": "Chat interface for Looking Glass - messages, input, streaming",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean --external react",
    "dev": "tsup src/index.ts --format esm --dts --watch --external react",
    "test": "vitest run",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "dependencies": {
    "@looking-glass/core": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "files": [
    "dist"
  ],
  "license": "MIT"
}
